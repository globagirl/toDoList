{% extends 'base.html.twig' %}
{% block title %}To Do List:{% endblock %}
{% block body %}
    <div class="col-lg-12">
        <h3><i class="fa fa-angle-right"></i> Dashboard</h3><hr>
        <div class="row mt mb">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Select Period</h4>
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-info">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <strong>Note: </strong>{{ message }}
                        </div>
                    {% endfor %}
                    <form class="form-inline" role="form" method="POST" action="{{ path ('stat') }}">
                        <input class="form-control form-control-inline input-medium" name="date1" size="16" type="date" placeholder="mm-dd-yyyy" required>
                        <input class="form-control form-control-inline input-medium" name="date2" size="16" type="date" placeholder="mm-dd-yyyy" required>
                        <button class="btn btn-theme" type="submit">Search</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="content-panel">
                    <h4><i class="fa fa-angle-right"></i> Statistic</h4>
                    <hr>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Total Jobs</th>
                            <th>Done</th>
                            <th>Overdue</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{ total }}</td>
                            <td>{{ done }}</td>
                            <td>{{ overdue }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}